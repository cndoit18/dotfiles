customCommands:
  - key: "C"
    command: "git cz"
    description: "commit with commitizen"
    context: "files"
    loadingText: "opening commitizen commit tool"
    output: terminal
  - key: "G"
    command: "kimi -y -q '根据当前git情况，生成一个符合conventional commit规范的commit'"
    description: "generate commit message"
    context: "files"
    loadingText: "opening commitizen commit tool"
    output: terminal
{{- if lookPath "delta" }}
git:
  pagers::
    - colorArg: always
      pager: delta --dark --paging=never --line-numbers
{{- end }}
